#include<iostream>
#include<cmath>

using namespace std;

int main(){
float a,y;//объявляем переменные

cout<<"Введите значение а:";//запрашиваем ввод числа
cin>>a;//считываем число

y=(pow(a,2)+1)/sqrt(pow(a,2)+1);//вычисляем результат по формуле

cout<<"Результат:"<<y<<endl;//выводим результат на экран


return(0);
} 
