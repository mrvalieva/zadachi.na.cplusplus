#include <iostream>
#include <cmath>
using namespace std;
int main(){
    double x, y, z, q;
    cout<<"Введите x: ";
    cin>>x;
    cout<<"Введите y: ";
    cin>>y;
    z=(x+(2+y)/pow(x,2))/(y+(1/sqrt(pow(x, 2)+10)));
    q=2.8*sin(x)+abs(y);
    cout<<"z = "<<z<<endl;
    cout<<"q = "<<q<<endl;
    return 0;
}
