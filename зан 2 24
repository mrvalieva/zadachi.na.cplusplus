#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Введите четырехзначное число: ";
    cin >> n;

    int a = n / 1000; // первая цифра
    int b = (n / 100) % 10; // вторая цифра
    int c = (n / 10) % 10; // третья цифра
    int d = n % 10; // четвертая цифра

    if (a == d && b == c) {
        cout << "Данное число читается одинаково слева направо и справа налево";
    } else {
        cout << "Данное число не читается одинаково слева направо и справа налево";
    }

    return 0;
}
