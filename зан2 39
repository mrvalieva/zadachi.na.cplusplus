#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Введите три числа: ";
    cin >> a >> b >> c;

    int sum;
    if (a > b) {
        if (b > c) {
            sum = a + b;
        } else {
            sum = a + c;
        }
    } else {
        if (a > c) {
            sum = a + b;
        } else {
            sum = b + c;
        }
    }

    cout << "Сумма двух наибольших чисел: " << sum;

    return 0;
}
