#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Введите число A: ";
    cin >> a;
    cout << "Введите число B: ";
    cin >> b;
    cout << "Введите число C: ";
    cin >> c;

    if ((a > 0 && b > 0 && c <= 0) || (a > 0 && b <= 0 && c > 0) || (a <= 0 && b > 0 && c > 0)) {
        cout << "Ровно два из чисел А, В, С являются положительными";
    } else {
        cout << "Не ровно два из чисел А, В, С являются положительными";
    }

    return 0;
}
