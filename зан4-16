#include <iostream>
using namespace std;

int main() {
    const int size = 14;
    int arr[size];
    int even_count = 0;

    for (int i = 0; i < size; i++) {
        cout << "Введите элемент массива: ";
        cin >> arr[i];
        if (arr[i] % 2 == 0) {
            even_count++;
        }
    }

    cout << "Количество четных элементов: " << even_count << endl;

    return 0;
}
