#include <iostream>
using namespace std;

int main() {
    const int size = 14;
    int arr[size];
    int even_count = 0;
    int even_sum = 0;

    for (int i = 0; i < size; i++) {
        cout << "Введите элемент массива: ";
        cin >> arr[i];
        if (arr[i] > 0 && arr[i] % 2 == 0) {
            even_count++;
            even_sum += arr[i];
        }
    }

    cout << "Количество четных положительных элементов: " << even_count << endl;
    cout << "Сумма четных положительных элементов: " << even_sum << endl;

    return 0;
}
