#include <iostream>
using namespace std;

int Factorial(int n) {
    if (n == 0) {
        return 1;
    } else {
        return n * Factorial(n-1);
    }
}

int main() {
    const int N = 10;
    for (int i = 0; i <= N; i++) {
        cout << i << "! = " << Factorial(i) << endl;
    }
    return 0;
}
