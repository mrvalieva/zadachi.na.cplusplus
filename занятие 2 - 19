#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Введите число A: ";
    cin >> a;
    cout << "Введите число B: ";
    cin >> b;
    cout << "Введите число C: ";
    cin >> c;

    if ((a == -b || a == -c) || (b == -a || b == -c) || (c == -a || c == -b)) {
        cout << "Среди трех данных целых чисел есть хотя бы одна пара взаимно противоположных";
    } else {
        cout << "Среди трех данных целых чисел нет пары взаимно противоположных";
    }

    return 0;
}
